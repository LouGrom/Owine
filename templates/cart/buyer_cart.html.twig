{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
	<h1>Votre panier</h1>
    <div class="table-responsive">
        {% for company in companies %}
        <table class="table table-borderless">
            <thead class="thead">
                <tr>
                    <th scope="col">{{ company.name }}</th>
                    <th scope="col">Quantité</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            {% for cart in carts %}
            {% dump(cart) %}
            <tbody>
                {% if cart.product.seller.company == company %}
                <tr class="">
                    <td>{{ cart.product.appellation.name }}</td>
                    <td><input value="{{ cart.quantity }}" type="number"></td>
                    <td class="float-right">{{ cart.totalAmount }} €</td>

                </tr>
                <tr>
                    <td colspan="3">
                        <div class="float-right">TOTAL</div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <a class="btn btn-dark float-right" href="{{ path('cart_show',{'id': app.user.id}) }}"><i class="fas fa-shopping-cart mr-2"></i>Valider</a>
                        <a class="btn btn-dark float-right mr-2" href="#"><i class="fas fa-trash mr-2"></i>Supprimer</a>                          
                    </td>
                </tr>
                {% endif %}
            </tbody>
            {% endfor %}
        </table>
        {% endfor %}
    </div>
</div>



{% endblock %}
