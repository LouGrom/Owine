{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    <h1>Cart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Vendeur</th>
                <th>Produit</th>
                <th>Quantity</th>
                <th>TotalAmount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.user.firstname }} {{ cart.user.lastname }} </td>
                <td>{{ cart.product.seller.firstname }} {{ cart.product.seller.lastname }}</td>
                <td>{{ cart.product.appellation }}</td>
                <td>{{ cart.quantity }}</td>
                <td>{{ cart.totalAmount }}</td>
                <td>
                    <a href="{{ path('cart_show', {'id': cart.id}) }}">show</a>
                    <a href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_new') }}">Create new</a>
{% endblock %}
