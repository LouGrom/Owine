{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Vendeur</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Montant total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.user.firstname }} {{ cart.user.lastname }} </td>
                <td>{{ cart.product.seller.firstname }} {{ cart.product.seller.lastname }}</td>
                <td>{{ cart.product.appellation.name }}</td>
                <td>{{ cart.quantity }}</td>
                <td>{{ cart.totalAmount }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('cart_show', {'id': cart.id}) }}">Détails</a>
                    <a class="btn btn-dark" href="{{ path('cart_edit', {'id': cart.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('cart_new') }}">Ajouter</a>
{% endblock %}
