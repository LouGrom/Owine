{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.siret_number) }}
        {{ form_row(registrationForm.vat_number) }}
        {{ form_row(registrationForm.company_name) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.zip_code) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.phone_number) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-secondary">Valider</button>
    {{ form_end(registrationForm) }}
{% endblock %}
