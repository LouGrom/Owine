{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

    <h2 class="mt-3 mb-3 text-center">Modifier votre profil</h2>
    <h3>Vos informations personnelles</h3>
        {{ form_start(userForm) }}
        <div class="col-9 ml-auto mr-auto mb-3">
            {{ form_widget(userForm) }}
        </div>

        <h3>Votre adresse</h3>
        <div class="col-9 ml-auto mr-auto mb-3">
            {{ form_widget(addressForm) }}
        </div>
        
        {% if 'ROLE_SELLER' in app.user.roles %}
        <h3 class="mt-3 mb-3">Vos préférences d'expédition</h3>
            
            <div class="col-9 m-auto mb-4">
                <h4 class="mb-3">Destinations</h4>
                <div class="d-md-flex justify-content-between">
                    <div>
                        <p class="h5 text-center">National</p>
                        {% for destination in destinations %}

                            {% if destination.zone == 'National' %}
                            <div class="ml-5 ml-md-0">
                                <input type="checkbox" id="{{ destination.country }}" name="{{ destination.country }}" {% if destination in app.user.company.destinations %}checked{% endif %}>
                                <label for="{{ destination.country }}">{{ destination.country }}</label>
                            </div>
                            
                            {% endif %}
                        {% endfor %}
                    </div>
                
                    <div>
                        <p class="h5 text-center">Europe</p>
                        {% for destination in destinations %}
                            {% if destination.zone == 'Europe' %}
                            <div class="ml-5">
                                <input type="checkbox" id="{{ destination.country }}" name="{{ destination.country }}" {% if destination in app.user.company.destinations %}checked{% endif %}>
                                <label for="{{ destination.country }}">{{ destination.country }}</label>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                
                    <div>
                        <p class="h5 text-center">Monde</p>
                        {% for destination in destinations %}
                            {% if destination.zone == 'World' %}
                            <div class="ml-5">
                                <input type="checkbox" id="{{ destination.country }}" name="{{ destination.country }}" {% if destination in app.user.company.destinations %}checked{% endif %}>
                                <label for="{{ destination.country }}">{{ destination.country }}</label>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>          

            <h4>Colisage :</h4>
                <table class="table text-center">
                    <thead class="thead">
                        <tr>
                            <th>Nombre de bouteilles</th>
                            <th>Hauteur (en cm)</th>
                            <th>longueur (en cm)</th>{# Zalf ? #}
                            <th>Largeur (en cm)</th>{# :o #}
                            <th>Poids (en kg)</th>
                        </tr>
                    </thead>
                    {% for package in app.user.company.packages %}
                        <tr>
                            <td>{{ package.bottleQuantity }}</td>
                            <td>{{ package.height }}</td>
                            <td>{{ package.length }}</td>
                            <td>{{ package.width }}</td>
                            <td>{{ package.weight }}</td>
                        </tr>
                    {% endfor %}
                </table>

                <button type="submit" class="btn btn-dark">Valider</button>
            </div>

            {% endif %}
        </div>
        {{ form_end(userForm) }}
{% endblock %}