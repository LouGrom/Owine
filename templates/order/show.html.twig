{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Quantité totale</th>
                <td>{{ order.totalQuantity }}</td>
            </tr>
            <tr>
                <th>Montant total</th>
                <td>{{ order.totalAmount }}</td>
            </tr>
            <tr>
                <th>Numéro de commande</th>
                <td>{{ order.trackingNumber }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Produits commandés</th>
                <td>
                    <ul>
                        {% for orderProduct in order.orderProducts %}
                        <li>{{  orderProduct.productId.appellation }} x{{ orderProduct.quantity }} - ({{ orderProduct.productId.price }}€ /u)</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('board') }}" class="btn btn-dark">Retour au tableau de bord</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
