{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h2>Commande n° {{ order.trackingNumber }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Date de la commande</th>
                <td>{{ order.createdAt ? order.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ order.buyer.firstname }} {{ order.buyer.lastname }}</td>
            </tr>
            <tr>
                <th>Addresse de facturation</th>
                <td>
                    
                    {{ order.buyer.address }}<br>
                    {{ order.buyer.zipCode }} {{ order.buyer.city }}<br>
                    {{ order.buyer.country }}
                    
                </td>
            </tr>

            <tr>
                <th>Destinataire</th>
                <td>{{ order.buyer.deliveryAddress[0].firstname }} {{ order.buyer.deliveryAddress[0].lastname }}</td>
            </tr>
            <tr>
                <th>Addresse de livraison</th>
                <td>
                    {{ order.buyer.deliveryAddress[0].address }}<br/>
                    {{ order.buyer.deliveryAddress[0].zipCode }} {{ order.buyer.deliveryAddress[0].city }}<br/>
                    {{ order.buyer.deliveryAddress[0].country }}
                </td>
            </tr>
        </tbody>
    </table>

    <h2>Détails de la commande</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Référence</th>
                    <th scope="col">Appellation</th>
                    <th scope="col">Couleur</th>
                    <th scope="col">Type</th>
                    <th scope="col">Volume</th>
                    <th scope="col">Vintage</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
            {% for orderProduct in order.orderProducts %}
                <tr>
                    <th scope="row">{{ orderProduct.product.id }}</th>
                    <td>{{ orderProduct.product.appellation }}</td>
                    <td>{{ orderProduct.product.color.name }}</td>
                    <td>{{ orderProduct.product.type.name }}</td>
                    <td>{{ orderProduct.product.capacity }}</td>
                    <td>{{ orderProduct.product.vintage }}</td>
                    <td>{{ orderProduct.product.price }} €</td>
                    <td>{{ orderProduct.quantity }}</td>
                    <td>{{ orderProduct.quantity * orderProduct.product.price }} €</td>
                </tr>
            {% endfor %}
                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="font-weight:bold">Sous-total</td>
                    <td>{{ order.totalQuantity }}</td>
                    <td>{{ order.totalAmount }} €</td>
                </tr>
                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="font-weight:bold">Frais de port</td>
                    <td></td>
                    {# !TODO à dynamiser plus tard  #}
                    <td>30 €</td>
                </tr>
                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="font-weight:bold">Total</td>
                    <td></td>
                    {# !TODO à dynamiser plus tard  #}
                    <td>{{ order.totalAmount + 30 }} €</td>
                </tr>

            </tbody>
        </table>
    </div>

    <a href="{{ path('board') }}" class="btn btn-dark">Retour au tableau de bord</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
